 {
     "name": "rabbit_hole",
     "version": "1.0",
     "description": "An extension that keeps track of Wikipedia rabbit holes.",
     "permissions": ["activeTab", 
                     "contextMenus", 
                     "declarativeContent", 
                     "storage", 
                     "tabs", 
                     "*://*.wikipedia.org/*",
                     "webNavigation"],
     "background": {
         "page": "./src/background.html",
         "persistent": true
     },
     "page_action": {
         "default_popup": "./src/popup/popup.html",
         "default_icon": {
             "16": "images/hole_icon16.png",
             "32": "images/hole_icon32.png",
             "48": "images/hole_icon48.png",
             "128": "images/hole_icon128.png"

         }
     },
     "content_scripts": [
         {
             "matches": ["http://*.wikipedia.org/*","https://*.wikipedia.org/*"],
             "js": ["./src/scripts/linkListener.js",
                    "./src/scripts/pageDrawer.js"],
             "css": ["./src/styles/page-drawer-styles.css"]
             
         }
     ],
     "icons": {
         "16": "images/hole_icon16.png",
         "32": "images/hole_icon32.png",
         "48": "images/hole_icon48.png",
         "128": "images/hole_icon128.png"
     },
     "options_page": "./src/options.html",
     "manifest_version": 2
 }
